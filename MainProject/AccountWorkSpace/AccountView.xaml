<UserControl x:Class="MainProject.AccountWorkSpace.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MainProject.AccountWorkSpace"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodel="clr-namespace:MainProject.ViewModel"
             mc:Ignorable="d"
             Background="White"
             xmlns:model="clr-namespace:MainProject.Model"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type=viewmodel:EmployeeViewModel}"
             d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    Grid.RowSpan="3" />
            <Grid x:Name="ManageAccount"
                  Grid.Column="0"
                  Background="{StaticResource MainColor}">
                <Border BorderBrush="Gray"
                        BorderThickness="1" />
                <TextBlock Text="NHÂN VIÊN"
                           FontWeight="DemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Margin="10,0,0,0"
                           Foreground="White" />
            </Grid>
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding ListEmployee}"
                         SelectedItem="{Binding New_Infor_Employee, Mode=OneWay}"
                         SelectedValue="{Binding New_Infor_Employee}"
                         HorizontalContentAlignment="Stretch"
                         VerticalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <local:AccountControl />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding"
                                    Value="0" />
                            <Setter Property="BorderThickness"
                                    Value="1" />
                            <Setter Property="BorderBrush"
                                    Value="Black" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
            <Button x:Name="AddAccount"
                    BorderBrush="Gray"
                    BorderThickness="0"
                    Grid.Row="2"
                    VerticalAlignment="Stretch"
                    Background="Transparent">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            x:Name="Add_Employee">
                    <materialDesign:PackIcon Kind="PlusCircleOutline"
                                             Foreground="{StaticResource MainColor}"
                                             VerticalAlignment="Center"
                                             Height="25"
                                             Width="25" />
                    <TextBlock Text="Thêm nhân viên mới"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource MainColor}"
                               FontSize="18"
                               Padding="15 0 0 0"
                               VerticalAlignment="Center">
                    </TextBlock>
                    <behaviors:Interaction.Triggers>
                        <behaviors:EventTrigger EventName="MouseDown"
                                                SourceObject="{Binding ElementName=Add_Employee}">
                            <behaviors:InvokeCommandAction Command="{Binding Click_Add_New_Employee_Command}" />
                        </behaviors:EventTrigger>
                    </behaviors:Interaction.Triggers>
                </StackPanel>
            </Button>
        </Grid>
        <DockPanel Grid.Column="1">
            <Border BorderThickness="1"
                    BorderBrush="Gray" />
            <Grid DockPanel.Dock="Top"
                  Margin="0 10">
                <TextBlock Text="Thông tin"
                           Height="auto"
                           Width="auto"
                           Foreground="Black"
                           FontSize="35"
                           Padding="10"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           VerticalAlignment="Center" />
                <Button Height="Auto"
                        FontSize="25"
                        Foreground="Red"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0 0 20 0"
                        Background="Transparent"
                        BorderBrush="Transparent">
                    <Button.Style>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                            <Setter Property="Content"
                                    Value="Xóa" />
                            <Setter Property="Command"
                                    Value="{Binding Delete_EMployee_Command}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.add}">
                                    <Setter Property="Content"
                                            Value="Hủy" />
                                    <Setter Property="Command"
                                            Value="{Binding Cancel_Command}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.edit}">
                                <Setter Property="Content"
                                        Value="Hủy" />
                                <Setter Property="Command"
                                        Value="{Binding Cancel_Command}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
            <StackPanel DockPanel.Dock="Bottom">
                <StackPanel.Resources>
                    <Style TargetType="DatePickerTextBox" x:Name="datetbx">
                        <Setter Property="IsReadOnly"
                                Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ModeView}"
                                         Value="{x:Static viewmodel:ModeAccountView.add}">
                                <Setter Property="IsReadOnly"
                                        Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Resources>
                <TextBox materialDesign:HintAssist.Hint="Tên"
                         Text="{Binding New_Infor_Employee.Name}"
                         FontSize="16"
                         Width="420"
                         Margin="0 5">
                    <TextBox.Style>
                        <Style TargetType="TextBox"
                               BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                            <Setter Property="IsEnabled"
                                    Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.add}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.edit}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <DatePicker materialDesign:HintAssist.Hint="Ngày sinh"
                            SelectedDate="{Binding New_Infor_Employee.Birthday}"
                            FontSize="16"
                            Width="420"
                            Margin="0 5">
                    <DatePicker.Style>
                        <Style TargetType="DatePicker"
                               BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
                            <Setter Property="IsEnabled"
                                    Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.add}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.edit}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DatePicker.Style>
                </DatePicker>
                <ComboBox materialDesign:HintAssist.Hint="Quyền"
                          ItemsSource="{Binding Source={x:Static model:POSITION_EMPLOYEE.Instance}, Path=ListPosition, Mode=OneWay}"
                          SelectedValue="{Binding New_Infor_Employee.POSITION_EMPLOYEE.Position}"
                          FontSize="16"
                          Width="420"
                          Margin="0 5">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox"
                               BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                            <Setter Property="IsEnabled"
                                    Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.add}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.edit}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                <TextBox materialDesign:HintAssist.Hint="Số điện thoại"
                         Text="{Binding New_Infor_Employee.Phone}"
                         FontSize="16"
                         Width="420"
                         Margin="0 30 0 5">
                    <TextBox.Style>
                        <Style TargetType="TextBox"
                               BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                            <Setter Property="IsEnabled"
                                    Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.add}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <PasswordBox x:Name="txt_pass"
                             materialDesign:HintAssist.Hint="Mật khẩu"
                             FontSize="16"
                             Width="420"
                             Margin="0 5">
                    <PasswordBox.Style>
                        <Style TargetType="{x:Type PasswordBox}"
                               BasedOn="{StaticResource MaterialDesignOutlinedPasswordBox}">
                            <Setter Property="IsEnabled"
                                    Value="False" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ModeView}"
                                             Value="{x:Static viewmodel:ModeAccountView.add}">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
                <Grid Margin="75,10">
                    <materialDesign:PackIcon Kind="AlertCircle"
                                             Width="25"
                                             Height="25"
                                             Foreground="Gray" />
                    <TextBlock Text="Nhân viên sẽ được hạn chế quyền truy cập vì lí do bảo mặt, nhưng sẽ không làm ảnh hưởng đến hoạt động kinh doanh của bạn."
                               FontStyle="Italic"
                               Margin="30,0"
                               TextWrapping="WrapWithOverflow" />
                </Grid>

                <TextBlock Text="Quản lí có quyền truy cập tương tự như chủ cửa hàng, nhưng không thể thay đổi quyền nhân viên thành quyền quản lí"
                           Margin="105,0"
                           FontStyle="Italic"
                           TextWrapping="WrapWithOverflow" />
                <Grid Margin="100,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Height="50"
                            ToolTip="MaterialDesignOutlinedButton"
                            Content="Đổi mật khẩu"
                            Command="{Binding Load_ViewChange_Pass_Command}"
                            Foreground="{StaticResource MainColor}"
                            BorderBrush="#31CA62"
                            FontSize="20"
                            Margin="10">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModeView}"
                                                 Value="{x:Static viewmodel:ModeAccountView.add}">
                                        <Setter Property="IsEnabled"
                                                Value="False" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Grid.Column="1"
                            Height="50"
                            ToolTip="MaterialDesignOutlinedButton"
                            Foreground="Blue"
                            BorderBrush="Blue"
                            FontSize="20"
                            Margin="10">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                <Setter Property="Content"
                                        Value="Sửa thông tin" />
                                <Setter Property="Command"
                                        Value="{Binding RequestEditEmployeeCommand}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModeView}"
                                                 Value="{x:Static viewmodel:ModeAccountView.add}">
                                        <Setter Property="Content"
                                                Value="Thêm nhân viên" />
                                        <Setter Property="Command"
                                                Value="{Binding UpDate_Add_EMployee_Command}" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModeView}"
                                                 Value="{x:Static viewmodel:ModeAccountView.edit}">
                                        <Setter Property="Content"
                                                Value="Lưu" />
                                        <Setter Property="Command"
                                                Value="{Binding UpDate_Add_EMployee_Command}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>